.chat-bar
  .chat-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      %ul.top-items__icons
        = link_to new_group_path(current_user) do
          = icon('fas', 'edit', class: 'icon')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')

  .chat-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "group-link" do
          %p.group-link__name
            = group.name
          %p.group-link__message
            = group.show_last_message



